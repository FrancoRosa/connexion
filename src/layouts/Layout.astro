---
interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "Functional training for all",
  image = "/image.png",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:image" content={image} />
    <title>{title} | ConnexionFit</title>
  </head>
  <body class="min-h-screen flex flex-col justify-center items-center bg-black">
    <slot />
  </body>
</html>
